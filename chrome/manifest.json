{
  "name": "Send to Kindle",
  "description": "Send a blog content to my Kindle",
  "version": "0.9.0",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
      "default_title": "Send to Kindle",
      "default_icon": "send_32x32.png"
  },
  "icons": {
    "16": "send_16x16.png",
    "48": "send_48x48.png"
  },
  "manifest_version": 2
}
